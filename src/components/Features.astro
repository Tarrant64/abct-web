<section class="section features" id="features">
  <div class="container">
    <h2 class="section-title">Everything You Need</h2>
    <p class="section-subtitle">
      A complete self-hosted portfolio tracker built for serious crypto users.
    </p>
    <div class="features-grid">

      <!-- Cardano-First -->
      <div class="card feature-card">
        <span class="feature-icon">
          <img src="/images/chains/cardano.png" alt="Cardano" width="30" height="30" />
        </span>
        <h3 class="feature-title">Cardano-First</h3>
        <p class="feature-description">Deep Cardano integration ‚Äî stake pools, governance actions, native assets, DeFi protocols, and delegation tracking.</p>
      </div>

      <!-- 26 Blockchains -->
      <div class="card feature-card">
        <div class="chain-logos">
          <img src="/images/chains/cardano.png" alt="Cardano" width="20" height="20" />
          <img src="/images/chains/bitcoin.png" alt="Bitcoin" width="20" height="20" />
          <img src="/images/chains/ethereum.png" alt="Ethereum" width="20" height="20" />
          <img src="/images/chains/solana.png" alt="Solana" width="20" height="20" />
