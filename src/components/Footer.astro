---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer-container">
    <div class="footer-brand">
      <a href="/" class="footer-logo">
        <img src="/images/abct-logo3.png" alt="ABCT Logo" width="32" height="32" />
        <span>A Better Crypto Tracker</span>
      </a>
      <p class="footer-tagline">Built with Cardano at heart.</p>
    </div>
    <div class="footer-links">
      <!-- GitHub -->
      <a
        href="https://github.com/Tarrant64/abct"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="footer-icon-link"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
      <!-- Issues & Feature Requests -->
      <a
        href="https://github.com/Tarrant64/abct/issues"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Issues & Feature Requests"
        class="footer-icon-link"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
        <span>Issues & Requests</span>
      </a>
      <!-- X / Twitter -->
      <a
        href="https://x.com/mr_cata"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Follow on X"
        class="footer-icon-link"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </a>
    </div>
    <div class="footer-bottom">
      <p>&copy; {currentYear} ABCT. Open source under the MIT License.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 60px 0 32px;
    border-top: 1px solid var(--border);
    background: var(--bg-primary);
  }

  .footer-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 28px;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
  }

  .footer-logo img {
    border-radius: 6px;
  }

  .footer-tagline {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .footer-icon-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: color var(--transition);
  }

  .footer-icon-link:hover {
    color: #ffffff;
  }

  .footer-bottom {
    padding-top: 24px;
    border-top: 1px solid var(--border);
    width: 100%;
    text-align: center;
  }

  .footer-bottom p {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 480px) {
    .footer-links {
      gap: 24px;
    }

    .footer-icon-link span {
      display: none;
    }
  }
</style>
