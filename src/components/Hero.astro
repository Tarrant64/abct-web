<style>
  .hero {
    padding: 160px 0 40px;
    text-align: center;
    position: relative;
  }

  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    padding: 8px 18px;
    background: rgba(0, 210, 106, 0.1);
    border: 1px solid rgba(0, 210, 106, 0.25);
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--accent);
    margin-bottom: 32px;
  }

  .hero-title {
    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
  }

  .hero-title-accent {
    background: linear-gradient(135deg, var(--accent) 0%, #00f5a0 50%, #00d9f5 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    color: var(--text-secondary);
    max-width: 520px;
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    margin-bottom: 64px;
  }

  /* Word Flow */
  .word-flow {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px 20px;
    max-width: 800px;
    padding: 0 24px;
    user-select: none;
  }

  .word-flow span {
    font-size: 1rem;
    font-weight: 600;
    white-space: nowrap;
    opacity: 0.85;
    transition: opacity 0.2s ease;
  }

  .word-flow span:hover {
    opacity: 1;
  }

  /* Gradient color shift across words */
  .word-flow span:nth-child(31n+1)  { color: #00d26a; }
  .word-flow span:nth-child(31n+2)  { color: #00d47e; }
  .word-flow span:nth-child(31n+3)  { color: #00d692; }
  .word-flow span:nth-child(31n+4)  { color: #00d8a5; }
  .word-flow span:nth-child(31n+5)  { color: #00d9b8; }
  .word-flow span:nth-child(31n+6)  { color: #00dacb; }
  .word-flow span:nth-child(31n+7)  { color: #00dbdd; }
  .word-flow span:nth-child(31n+8)  { color: #00d5e8; }
  .word-flow span:nth-child(31n+9)  { color: #00cef0; }
  .word-flow span:nth-child(31n+10) { color: #00c5f5; }
  .word-flow span:nth-child(31n+11) { color: #00bbf7; }
  .word-flow span:nth-child(31n+12) { color: #00b0f5; }
  .word-flow span:nth-child(31n+13) { color: #00a4f0; }
  .word-flow span:nth-child(31n+14) { color: #0098ea; }
  .word-flow span:nth-child(31n+15) { color: #008ce3; }
  .word-flow span:nth-child(31n+16) { color: #0080dc; }
  .word-flow span:nth-child(31n+17) { color: #1a7dd8; }
  .word-flow span:nth-child(31n+18) { color: #3380d5; }
  .word-flow span:nth-child(31n+19) { color: #4d84d2; }
  .word-flow span:nth-child(31n+20) { color: #6688cf; }
  .word-flow span:nth-child(31n+21) { color: #7f8dcc; }
  .word-flow span:nth-child(31n+22) { color: #9991ca; }
  .word-flow span:nth-child(31n+23) { color: #b296c8; }
  .word-flow span:nth-child(31n+24) { color: #c89bc6; }
  .word-flow span:nth-child(31n+25) { color: #d4a0c4; }
  .word-flow span:nth-child(31n+26) { color: #dba5c2; }
  .word-flow span:nth-child(31n+27) { color: #d4a8b8; }
  .word-flow span:nth-child(31n+28) { color: #c8b0a8; }
  .word-flow span:nth-child(31n+29) { color: #b8bc92; }
  .word-flow span:nth-child(31n+30) { color: #8cc87a; }
  .word-flow span:nth-child(31n+0)  { color: #50d068; }

  @media (max-width: 768px) {
    .hero {
      padding: 120px 0 60px;
    }

    .hero-title {
      font-size: 2.8rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }

    .hero-actions .btn {
      justify-content: center;
    }

    .word-flow {
      gap: 8px 14px;
    }

    .word-flow span {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .word-flow span {
      font-size: 0.8rem;
    }
  }
</style>
