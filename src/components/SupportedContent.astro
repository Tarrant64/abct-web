<style>
  /* Hero Stats */
  .supported-hero {
    padding: 140px 0 60px;
    text-align: center;
  }

  .supported-title {
    font-size: 3.5rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: 16px;
  }

  .supported-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 48px;
  }

  .stats-bar {
    display: flex;
    justify-content: center;
    gap: 24px;
    flex-wrap: wrap;
  }

  .stat-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 28px 48px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    backdrop-filter: blur(10px);
  }

  .stat-number {
    font-size: 2.8rem;
    font-weight: 800;
    color: var(--accent);
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Chain Categories */
  .chain-category {
    margin-bottom: 48px;
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .category-count {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--accent);
    background: rgba(0, 210, 106, 0.1);
    padding: 2px 10px;
    border-radius: 100px;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 12px;
  }

  .chain-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    transition: background var(--transition), border-color var(--transition), transform var(--transition);
  }

  .chain-item:hover {
    background: var(--card-hover);
    border-color: var(--border-accent);
    transform: translateY(-2px);
  }

  .chain-item img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    flex-shrink: 0;
  }

  .chain-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .chain-item-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .chain-item-token {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .chain-badge {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--accent);
    background: rgba(0, 210, 106, 0.1);
    border: 1px solid rgba(0, 210, 106, 0.2);
    padding: 3px 8px;
    border-radius: 6px;
    white-space: nowrap;
    margin-left: auto;
  }

  .category-note {
    margin-top: 12px;
    font-size: 0.85rem;
    color: var(--text-muted);
    font-style: italic;
  }

  /* DeFi Section */
  .supported-defi {
    border-top: 1px solid var(--border);
  }

  .defi-category {
    margin-bottom: 48px;
  }

  .defi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 12px;
  }

  .defi-card {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 14px 18px;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 10px;
    transition: border-color var(--transition);
  }

  .defi-card:hover {
    border-color: var(--border-accent);
  }

  .defi-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .defi-type {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .defi-compact-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .defi-tag {
    display: inline-block;
    padding: 6px 14px;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
    transition: border-color var(--transition), color var(--transition);
  }

  .defi-tag:hover {
    border-color: var(--border-accent);
    color: var(--text-primary);
  }

  /* Exchanges */
  .supported-exchanges {
    border-top: 1px solid var(--border);
  }

  .exchange-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 12px;
  }

  .exchange-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 18px 16px;
    text-align: center;
  }

  .exchange-name {
    font-size: 0.95rem;
    font-weight: 700;
  }

  .exchange-badge {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    background: rgba(0, 210, 106, 0.1);
    padding: 3px 10px;
    border-radius: 100px;
  }

  /* EVM Callout */
  .evm-callout {
    padding: 40px 0;
  }

  .callout-box {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    padding: 24px 28px;
    background: rgba(0, 210, 106, 0.05);
    border: 1px solid rgba(0, 210, 106, 0.15);
    border-radius: 12px;
    max-width: 720px;
    margin: 0 auto;
  }

  .callout-box svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .callout-box strong {
    display: block;
    font-size: 1rem;
    margin-bottom: 4px;
  }

  .callout-box p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* CTA */
  .supported-cta {
    padding: 80px 0;
    border-top: 1px solid var(--border);
  }

  .cta-container {
    text-align: center;
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 24px;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: 16px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .supported-hero {
      padding: 120px 0 40px;
    }

    .supported-title {
      font-size: 2.5rem;
    }

    .stat-card {
      padding: 20px 32px;
    }

    .stat-number {
      font-size: 2rem;
    }

    .category-grid {
      grid-template-columns: 1fr;
