<section class="supported-hero bg-gradient">
  <div class="container">
    <h1 class="supported-title">Supported Crypto</h1>
    <p class="supported-subtitle">Everything ABCT tracks â€” blockchains, DeFi protocols, and exchanges.</p>
    <div class="stats-bar">
      <div class="stat-card">
        <span class="stat-number">50+</span>
        <span class="stat-label">Blockchains</span>
      </div>
      <div class="stat-card">
        <span class="stat-number">80+</span>
        <span class="stat-label">DeFi Protocols</span>
      </div>
      <div class="stat-card">
        <span class="stat-number">10+</span>
        <span class="stat-label">Exchanges</span>
      </div>
    </div>
  </div>
</section>

<!-- Blockchains Section -->
<section class="section supported-chains" id="blockchains">
  <div class="container">
    <h2 class="section-title">Blockchains</h2>
    <p class="section-subtitle">Organized by ecosystem. Each chain links to its official site.</p>

    {chainCategories.map((category) => (
      <div class="chain-category">
        <h3 class="category-title">
          {category.title}
        </h3>
        <div class="category-grid">
          {category.chains.map((chain) => (
            <a href={chain.url} class="chain-item" target="_blank" rel="noopener noreferrer">
              <img src={chain.logo} alt={chain.name} width="40" height="40" loading="lazy" />
              <div class="chain-info">
                <span class="chain-item-name">{chain.name}</span>
                <span class="chain-item-token">{chain.token}</span>
              </div>
              {chain.badge && <span class="chain-badge">{chain.badge}</span>}
            </a>
          ))}
        </div>
        {category.title === 'EVM Chains' && (
          <p class="category-note">Plus any EVM-compatible chain via generic RPC configuration.</p>
        )}
      </div>
    ))}
  </div>
</section>

<!-- DeFi Section -->
<section class="section supported-defi" id="defi">
  <div class="container">
    <h2 class="section-title">DeFi Protocols</h2>
    <p class="section-subtitle">Automatic detection across lending, DEXs, liquid staking, and yield protocols.</p>

    <!-- Cardano DeFi -->
    <div class="defi-category">
      <h3 class="category-title">
        Cardano DeFi
      </h3>
      <div class="defi-grid">
        {cardanoDefi.map((protocol) => (
          <div class="defi-card">
            <span class="defi-name">{protocol.name}</span>
            <span class="defi-type">{protocol.type}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- EVM DeFi -->
    <div class="defi-category">
      <h3 class="category-title">
        EVM DeFi &mdash; Contract-Based
      </h3>
      <div class="defi-compact-grid">
        {evmDefiContract.map((name) => (
          <span class="defi-tag">{name}</span>
        ))}
      </div>
    </div>

    <div class="defi-category">
      <h3 class="category-title">
        EVM DeFi &mdash; Token Balance
      </h3>
      <div class="defi-compact-grid">
        {evmDefiToken.map((name) => (
          <span class="defi-tag">{name}</span>
        ))}
      </div>
    </div>

    <!-- Solana DeFi -->
    <div class="defi-category">
      <h3 class="category-title">
        Solana DeFi
      </h3>
      <div class="defi-compact-grid">
        {solanaDefi.map((name) => (
          <span class="defi-tag">{name}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<!-- Exchanges Section -->
<section class="section supported-exchanges" id="exchanges">
  <div class="container">
    <h2 class="section-title">Exchanges</h2>
    <p class="section-subtitle">Connect via read-only API keys. Your credentials never leave your machine.</p>

    <div class="exchange-grid">
      {exchanges.map((exchange) => (
        <div class="exchange-card card">
          <span class="exchange-name">{exchange.name}</span>
          <span class="exchange-badge">Read-only API</span>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Generic EVM Callout -->
<section class="evm-callout">
  <div class="container">
    <div class="callout-box">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 16v-4M12 8h.01"/>
      </svg>
      <div>
        <strong>Any EVM Chain</strong>
        <p>ABCT supports any EVM-compatible blockchain via custom RPC configuration. If your chain isn't listed, add it by configuring the RPC URL in your environment variables.</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA -->
